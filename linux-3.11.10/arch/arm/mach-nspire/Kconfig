config ARCH_NSPIRE
	bool "TI-NSPIRE based"
	depends on ARCH_MULTI_V4_V5
	depends on MMU
	select CPU_ARM926T
	select COMMON_CLK
	select GENERIC_CLOCKEVENTS
	select GENERIC_IRQ_CHIP
	select SPARSE_IRQ
	select ARM_AMBA
	select ARM_VIC
	select ARM_TIMER_SP804
	select USE_OF
	select CLKSRC_OF
	help
	  This enables support for systems using the TI-NSPIRE CPU
