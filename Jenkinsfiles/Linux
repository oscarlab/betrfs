#!/usr/bin/env groovy

pipeline {
  agent {
    label 'betrfs-dev'
  }

  stages {
    stage('Build') {
      steps {
        sh '''
        cd Jenkinsfiles
        ./build.sh
        '''
      }
    }

    stage('Unit Testing') {
      parallel {
        stage('Test Group 1') {
          steps {
            sh "hostname"
            timeout(time: 1, unit: 'HOURS'){
              sh '''
              cd Jenkinsfiles
              ./test1.sh
              '''
            }
          }
          post {
            always {
              timeout(time: 10, unit: 'MINUTES') {
                sh '''
                cd Jenkinsfiles/test1
                vagrant ssh -c "/bin/dmesg"
                result=$?
                vagrant destroy -f
                '''
              }
            }
          }
        }

        stage('Test Group 2') {
          steps {
            sh "hostname"
            timeout(time: 1, unit: 'HOURS'){
              sh '''
              sleep 10
              cd Jenkinsfiles
              ./test2.sh
              '''
            }
          }
          post {
            always {
              timeout(time: 10, unit: 'MINUTES') {
                sh '''
                cd Jenkinsfiles/test2
                vagrant ssh -c "/bin/dmesg"
                result=$?
                vagrant destroy -f
                '''
              }
            }
          }
        }

        stage('Test Group 3') {
          steps {
            sh "hostname"
            timeout(time: 4, unit: 'HOURS'){
              sh '''
              sleep 20
              cd Jenkinsfiles
              ./test3.sh
              '''
            }
          }
          post {
            always {
              timeout(time: 10, unit: 'MINUTES') {
                sh '''
                cd Jenkinsfiles/test3
                vagrant ssh -c "/bin/dmesg"
                result=$?
                vagrant destroy -f
                '''
              }
            }
          }
        }

        stage('Test Group 4') {
          steps {
            sh "hostname"
            timeout(time: 4, unit: 'HOURS'){
              sh '''
              sleep 30
              cd Jenkinsfiles
              ./test4.sh
              '''
            }
          }
          post {
            always {
              timeout(time: 10, unit: 'MINUTES') {
                sh '''
                cd Jenkinsfiles/test4
                vagrant ssh -c "/bin/dmesg"
                result=$?
                vagrant destroy -f
                '''
              }
            }
          }
        }

        stage('Test Group 5') {
          steps {
            sh "hostname"
            timeout(time: 2, unit: 'HOURS'){
              sh '''
              sleep 40
              cd Jenkinsfiles
              ./test5.sh
              '''
            }
          }
          post {
            always {
              timeout(time: 10, unit: 'MINUTES') {
                sh '''
                cd Jenkinsfiles/test5
                vagrant ssh -c "/bin/dmesg"
                result=$?
                vagrant destroy -f
                '''
              }
            }
          }
        }
      }
    }
  }

  post {
    always {
      sh '''
      cd Jenkinsfiles
      '''
    }
  }
}
