#!/usr/bin/env groovy

pipeline {
  agent {
    label 'betrfs-dev'
  }

  stages {
    stage('Build') {
      steps {
        sh '''
        cd Jenkinsfiles
        sudo chmod +x build.sh
        ./build.sh
        '''
      }
    }

    stage('Unit Testing') {
      parallel {
        stage('Test Group 1') {
          steps {
            sh "hostname"
            timeout(time: 2, unit: 'HOURS'){
              sh '''
              cd Jenkinsfiles
              sudo chmod +x test1.sh
              ./test1.sh
              '''
            }
          }
          post {
            always {
              timeout(time: 10, unit: 'MINUTES') {
                sh '''
                cd Jenkinsfiles
                vagrant ssh -c "/bin/dmesg"
                result=$?
                vagrant destroy -f
                '''
              }
            }
          }
        }

        stage('Test Group 2') {
          steps {
            sh "hostname"
            timeout(time: 3, unit: 'HOURS'){
              sh '''
              sleep 10
              cd Jenkinsfiles
              sudo chmod +x test2.sh
              ./test2.sh
              '''
            }
          }
          post {
            always {
              timeout(time: 10, unit: 'MINUTES') {
                sh '''
                cd Jenkinsfiles
                vagrant ssh -c "/bin/dmesg"
                result=$?
                vagrant destroy -f
                '''
              }
            }
          }
        }

        stage('Test Group 3') {
          steps {
            sh "hostname"
            timeout(time: 2, unit: 'HOURS'){
              sh '''
              sleep 20
              cd Jenkinsfiles
              sudo chmod +x test3.sh
              ./test3.sh
              '''
            }
          }
          post {
            always {
              timeout(time: 10, unit: 'MINUTES') {
                sh '''
                cd Jenkinsfiles
                vagrant ssh -c "/bin/dmesg"
                result=$?
                vagrant destroy -f
                '''
              }
            }
          }
        }

        stage('Test Group 4') {
          steps {
            sh "hostname"
            timeout(time: 1, unit: 'HOURS'){
              sh '''
              sleep 30
              cd Jenkinsfiles
              sudo chmod +x test4.sh
              ./test4.sh
              '''
            }
          }
          post {
            always {
              timeout(time: 10, unit: 'MINUTES') {
                sh '''
                cd Jenkinsfiles
                vagrant ssh -c "/bin/dmesg"
                result=$?
                vagrant destroy -f
                '''
              }
            }
          }
        }

        stage('Test Group 5') {
          steps {
            sh "hostname"
            timeout(time: 2, unit: 'HOURS'){
              sh '''
              sleep 40
              cd Jenkinsfiles
              sudo chmod +x test5.sh
              ./test5.sh
              '''
            }
          }
          post {
            always {
              timeout(time: 10, unit: 'MINUTES') {
                sh '''
                cd Jenkinsfiles
                vagrant ssh -c "/bin/dmesg"
                result=$?
                vagrant destroy -f
                '''
              }
            }
          }
        }
      }
    }
  }

  post {
    always {
      sh '''
      cd Jenkinsfiles
      echo "*** Console from Build: "
      cat console.out
      echo "*** Console from Test Group 1: "
      cd test1
      cat console.out
      echo "*** Console from Test Group 2: "
      cd ../test2
      cat console.out
      echo "*** Console from Test Group 3: "
      cd ../test3
      cat console.out
      echo "*** Console from Test Group 4: "
      cd ../test4
      cat console.out
      echo "*** Console from Test Group 5: "
      cd ../test5
      cat console.out
      '''
    }
  }
}
