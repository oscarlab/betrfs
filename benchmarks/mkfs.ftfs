#!/bin/bash

DIR="${BASH_SOURCE%/*}"
if [[ ! -d "$DIR" ]]; then DIR="$PWD"; fi

. "$DIR/fs-info.sh"
. "$DIR/.hostcheck"
. "$DIR/.rootcheck"
. "$DIR/.ismounted"

mkfs -t ext4 -F -E lazy_itable_init=0,lazy_journal_init=0 $sb_dev
mount $sb_dev /mnt
cd /mnt; mkdir db; mkdir dev; touch dev/null; mkdir tmp; chmod 1777 tmp; cd -;

sleep 1

umount /mnt
